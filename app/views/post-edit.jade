extends admin-layout

block body
  form.new_post#new_post(action='/post/update/' + post.id, method='post', name='login', accept-charset='UTF-8')
    div.contain
      div#text-title.active.expandingArea
        pre
          span
          br
        textarea(tabindex=1, name='title', placeholder='Title here')
          != post.titleMarkup
      fieldset.markdown.image
        div#text-content.expandingArea.active
          pre
            span
            br
          textarea(tabindex=2, name='password', name='markup', type='password', placeholder='Write post here')
            != post.contentMarkup
    div#publish-bar
      div.contain
        div.left
          a(href='/admin') Â« Admin
        div.right
          label(for='post_draft') Draft&nbsp;
            input#post_draft(checked=!post.published, name='draft', type='checkbox')
          input#save-button(tabindex=3, type='submit', value='Save')
